<% content_for :title, "Editando Usuário" %>

<div class="min-h-screen w-full flex flex-col items-center justify-center p-6 bg-gray-900 text-white">
  <div class="w-full max-w-lg bg-gray-900 bg-opacity-90 rounded-2xl shadow-2xl p-10 border border-gray-800">
    <h1 class="text-3xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 mb-2">Editando Usuário</h1>
    <p class="text-center text-gray-400 mb-8">Atualize as informações do usuário abaixo.</p>

    <%= render "form", user: @user %>

    <div class="mt-8 text-center">
      <%= link_to "Voltar", users_path, class: "bg-gray-700 text-gray-300 px-6 py-3 rounded-lg hover:bg-gray-600 transition shadow-lg font-bold" %>
    </div>
  </div>
</div>
